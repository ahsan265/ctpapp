<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/photo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/setImage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/ic_add_photo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Name"
        android:textColor="#000000"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Saad Khan"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_wardenid_icon"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Warden ID"
        android:textColor="#000000"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/wardenId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="SaadKhan1103"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_wardenid_icon"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Email"
        android:textColor="#000000"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="saadkhan1501@gmail.com"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_email_icon"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Cnic"
        android:textColor="#000000"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/cnic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_cnic_icon"
        android:drawablePadding="15dp"
        android:text="1330236053961"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp" />
</LinearLayout>
</LinearLayout>