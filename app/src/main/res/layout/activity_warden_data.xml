<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/colorBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Starting Point Coordinates"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/startingPoint"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Starting Coordinates"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Ending Point Coordinates"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/destinationPoint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Ending Coordinates"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Warden Name"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/wardenName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Saad"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Warden ID"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/wardenId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Saad1103"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Time Duration"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/timeDuration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="40 min"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Road Block"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/roadBlock"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Low"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Traffic Incident"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/trafficIncident"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Weather"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

        <TextClock
            android:id="@+id/textClock1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:hint="Time"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.cardview.widget.CardView>